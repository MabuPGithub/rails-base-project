
<div class="admins-index-container">
  <div class="pending-accounts-container">
    <%= link_to "Pending Accounts", admin_pending_show_url %>
  </div>
  <div class="create-new-user-container">
    <%= link_to "Create New User", new_admin_path %>
  </div>
  <div class="view-transactions-container">
    <%= link_to "View User Transactions", admin_transaction_list_path %>
  </div>
  <br>
  <h1 id="admin-users-h1">Users</h1>
  <% @users.each do |user| %>
  <div class="users-item-container">
    <p>Email: <strong><%= user.email %></strong></p>
    <p>Name: <strong><%= user.name %></strong></p>
    <% if user.approved == false %>
        <p>Status: <strong>Pending</strong></p>
    <% else %>
        <p>Status: <strong>Approved</strong></p>
    <% end %>
    <p><a href="<%= admin_path(user) %>">View User</a></p>
  </div>
  <% end %>

</div>
